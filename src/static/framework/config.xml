<widget id="{{id}}" version="{{version}}">
    <name>{{name}}</name>
    <description>{{description}}</description>
    <author email="{{email}}" href="{{href}}">{{author}}</author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Fullscreen" value="{{fullscreen}}" />
    <preference name="Orientation" value="{{orientation}}" />
    <preference name="HideKeyboardFormAccessoryBar" value="{{accessorybar}}"/>
    <preference name="BackgroundColor" value="0xff000000"/>
    <preference name="DisallowOverscroll" value="true"/>
</widget>
